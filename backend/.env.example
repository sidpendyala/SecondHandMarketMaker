# Required: RapidAPI key for "Real-Time eBay Data" API
# Get yours at https://rapidapi.com/mahmudulhasandev/api/real-time-ebay-data
RAPID_API_KEY=your_rapidapi_key_here

# Production: frontend URL for CORS (e.g. https://your-app.vercel.app)
# FRONTEND_URL=https://your-app.vercel.app

# Optional: OpenAI API key for GPT-4o vision (condition analysis, product detection)
# Get yours at https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Google Gemini API key (free fallback for AI vision)
# Get yours at https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Database (required for tracked searches)
# Railway/Heroku provide DATABASE_URL; for local use postgresql://user:pass@localhost/dbname
DATABASE_URL=postgresql://localhost/marketmaker

# Job runner: secret for cron endpoints (POST /jobs/scan_all, POST /jobs/cleanup)
# Generate a random string and set it in Railway cron job as header X-Job-Secret
JOB_SECRET=your_job_secret_here

# Encrypt stored search queries (required for tracked searches)
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SEARCH_ENCRYPTION_KEY=your_encryption_key_here

# Optional: separate key for query HMAC (dedupe/logging). If unset, JOB_SECRET is used.
# HMAC_SECRET=your_hmac_secret_here

# Retention: delete scan_runs and alert_events older than this many days (default 30)
DATA_RETENTION_DAYS=30
